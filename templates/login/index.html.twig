{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
<div class="container">
<h1 class="text-primary text-center mt-5 mb-5">Bienvenue sur la page de connexion</h1>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="row">
    <div class="col-lg-6 offset-lg-3">
            <form action="{{ path('login') }}" method="post">
            <div class="mb-3">
                <label class="form-label text-primary" for="email">Email</label>
                <input class="form-control" type="text" id="email" name="_username" value=""/>
            </div>
            <div class="mb-3">
                <label class="form-label text-primary" for="password">Mot de passe</label>
                <input class="form-control" type="password" id="password" name="_password"/>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="d-flex justify-content-between mt-4">
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-primary mt-4 mb-5" type="submit">Connexion</button>
            </div>
        
        </form>
    </div>
</div>
</div>
{% endblock %}
